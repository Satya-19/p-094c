<link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />

<style>
  html,
  body {
    font-family: "Poppins", sans-serif;
    font-size-adjust: 0.45;
  }

  nav {
    background-color: #fff !important;
    top: 0;
    height: 12vh;
  }

  .navbar-nav a.nav-item {
    transition: all 0.1s ease-in-out;
    color: #666 !important;
    /* font-size: 16px; */
    font-size-adjust: 0.53;
  }

  .navbar-expand-lg {
    box-sizing: border-box;
    box-shadow: 0 2px 9px #ccc;
  }

  .navbar-expand-lg {
    box-sizing: border-box;
    box-shadow: 0 2px 9px #ccc;
  }

  .logo {
    width: 4vw;
    margin-left: 15px;
    margin-top: -5px;
  }

  .brand-name {
    font-size-adjust: 0.5;
    margin: auto 1rem;
    color: rgb(0, 155, 255);
  }

  .vertical-line {
    border-left: 2px solid rgba(255, 174, 25, 0.3);
    margin: 1.1rem 0 1.1rem 0.8rem;
  }

  .college-brand {
    display: flex;
  }

  a.nav-item.active_nav_link {
    color: #000 !important;
    font-weight: 700;
    padding-left: 25px;
    padding-right: 25px;
  }

  .weight {
    font-weight: 600;
  }

  .brd {
    color: #aaa;
  }

  .navbar-nav {
    margin-left: auto;
  }

  .nav-link {
    margin-right: 20px;
  }

  @media only screen and (max-width: 768px) {
    nav {
      height: auto;
      line-height: 1.2em;
    }

    .nav-link {
      margin-left: auto;
      margin-right: auto;
    }

    .vertical-line {
      margin: 0.8rem 0 0.8rem 0.4rem;
    }

    .logo {
      margin: 0 0 0;
      width: 54px;
    }

    .college-brand {
      width: 75%;
    }

    .brand-name {
      font-size: 0.7rem;
      width: 53%;
    }

    .brd {
      color: #aaa;
      font-size: 0.6rem;
    }
  }

  @media screen and (min-width: 520px) {
    .navbar-nav {
      font-size: calc(8px + 5 * ((90vw - 420px) / 900));
    }
  }

  @media screen and (min-width: 1300px) {
    .navbar-nav {
      font-size: 16px;
    }

    .brand-name {
      font-size: 1.2rem;
    }

    .brd {
      font-size: 1.1rem;
    }
  }

  @media screen and (min-width: 2200px) {
    .navbar-nav {
      font-size: 19px;
    }
  }
</style>

<script>
  function ready(callback) {
    // in case the document is already rendered
    if (document.readyState != "loading") callback();
    // modern browsers
    else if (document.addEventListener)
      document.addEventListener("DOMContentLoaded", callback);
    // IE <= 8
    else
      document.attachEvent("onreadystatechange", function () {
        if (document.readyState == "complete") callback();
      });
  }

  ready(() => {
    let path = window.location.pathname;
    let nav_selector;

    switch (path) {
      case "/":
        nav_selector = "a.nav-item:nth-child(1)";
        break;
      case "/about":
        nav_selector = "a.nav-item:nth-child(2)";
        break;
      case "/whycet":
        nav_selector = "a.nav-item:nth-child(3)";
        break;
      case "/placement":
        nav_selector = "a.nav-item:nth-child(4)";
        break;
      case "/pdf/Brochure.pdf":
        nav_selector = "a.nav-item:nth-child(5)";
        break;
      case "/team":
        nav_selector = "a.nav-item:nth-child(6)";
        break;
      case "/contact":
        nav_selector = "a.nav-item:nth-child(7)";
        break;
      case "/login":
        nav_selector = "a.nav-item:nth-child(8)";
        break;
      case "/profile":
        nav_selector = "a.nav-item:nth-child(8)";
        break;
    }

  });
</script>
<nav class="navbar sticky-top navbar-expand-lg navbar-light">
